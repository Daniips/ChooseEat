{
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently -n api,web -c magenta,cyan \"npm:dev -w apps/api\" \"npm:dev -w apps/web\"",
        "build": "npm run -w apps/api build && npm run -w apps/web build",
        "start": "npm run -w apps/api start && npm run -w apps/web start"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    },
    "dependencies": {
        "i18next": "^25.6.0",
        "i18next-http-backend": "^3.0.2",
        "react-i18next": "^16.1.6"
    }
}
